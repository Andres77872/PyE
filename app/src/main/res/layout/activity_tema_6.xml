<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tema6.Tema_6">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introducir el evento que se busca"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtV_T6_Entrada1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="0.35,0.4"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introducir el resto de eventos relevantes excluyendo el evento buscado"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtV_T6_Entrada2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="0.4,0.7;0.25,0.55"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_T6_Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/lbl_T6_Salida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="P(A|B) = "
        android:textSize="22sp" />
</LinearLayout>