        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_T10_Entrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1;2,2;5,3;9,4;5,5;2"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_T10_Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lbl_T10_S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sesgo = "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lbl_T10_K"
        android:layout_width="match_parent"
